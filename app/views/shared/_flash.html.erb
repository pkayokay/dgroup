<% if flash[:alert] %>
  <div class="bg-red-100 text-red-800 flex items-center gap-3 font-medium p-4 rounded-md mb-6">
<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0 size-5"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/><path d="M12 8h.01"/></svg>
    <span><%= flash[:alert] %></span>
  </div>
<% end %>


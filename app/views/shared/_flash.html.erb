<% if flash[:alert] %>
  <div class="bg-red-100 text-red-800 flex items-center gap-3 font-medium p-4 rounded-md mb-6">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-5"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
    <span><%= flash[:alert] %></span>
  </div>
<% end %>

<% if flash[:notice] %>
  <div class="bg-green-100 text-green-800 flex items-center gap-3 font-medium p-4 rounded-md mb-6">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-5"><path d="M20 6 9 17l-5-5"/></svg>
    <span><%= flash[:notice] %></span>
  </div>
<% end %>
